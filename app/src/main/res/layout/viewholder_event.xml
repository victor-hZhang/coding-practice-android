<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_layout"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:padding="8dp">

    <ImageView
        android:contentDescription="@string/content_poster_image"
        android:id="@+id/event_poster_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:gravity="center">

        <TextView
            android:id="@+id/event_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/EventTextTheme" />

        <TextView
            android:id="@+id/event_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/EventTextTheme"/>

        <TextView
            android:id="@+id/event_venue_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/EventTextTheme"/>
    </LinearLayout>
</FrameLayout>